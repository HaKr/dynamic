{
  "name": "dynamic",
  "version": "1.0.0",
  "description": "Dynamic templates that appear on value changes",
  "main": "dynamic-server.js",
  "scripts": {
    "test": "tape -r ./src/modules/dynamic-values.js test/*.js",
    "test:integration": "mocha-phantomjs test/mocha/browser/assets/test_screenshot.html",
    "watch:all": "parallelshell 'npm run watch:modules' 'npm run watch:components' 'npm run watch:www'",
    "livereload": "live-reload --port 9091 dist/",
    "watch:modules": "watch 'npm run browserify' src/modules",
    "watch:components": "watch 'npm run browserify' src/components",
    "watch:www": "watch 'npm run copy-static' src/www",
    "watch:dist": "watch 'npm run copy-shared' dist",
    "browserify": "browserify src/modules/*.js src/components/*.js --outfile dist/js/dynamic-app.js",
    "copy-static": "cp -r src/www/* dist/",
    "copy-shared": "cp -r dist/* /media/sf_eeg/dynamic/",
    "deploy-static": "parallelshell 'sudo npm run browserify' 'sudo npm run copy-static'",
    "deploy-shared": "parallelshell 'sudo npm run browserify' 'sudo npm run copy-shared'"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/HaKr/dynamic.git"
  },
  "keywords": [
    "Dynamic",
    "Web"
  ],
  "author": "Harry de Kroon",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-webdriver": "^1.2.0",
    "event-emitter": "^0.3.4",
    "install": "^0.8.2",
    "jshint": "^2.9.4",
    "live-reload": "latest",
    "mocha": "^3.2.0",
    "mocha-phantomjs": "^4.1.0",
    "npm": "^4.0.5",
    "parallelshell": "latest",
    "phantomjs": "^2.1.7",
    "selenium-webdriver": "^3.3.0",
    "tape": "^4.6.3",
    "tape-run": "^2.1.5",
    "tapes": "^4.1.0",
    "watch": "latest"
  },
  "dependencies": {
    "uuid": "^3.0.1"
  }
}
